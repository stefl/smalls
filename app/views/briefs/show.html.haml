.main
  .smalls-branding
    %a{:href=>"/", :"data-no-turbolink" => "true"}
      %img{:src=>asset_path("smalls-logo.svg"), :width => 100}

  = render partial: "briefs/display"

  %polymer-element{name: "brief-show"}
    %template
      %brief-display{brief: "{{brief}}"}

    :javascript
      Polymer('brief-show', {

        ready: function() {
          this.brief = #{@brief.to_json};
        }

      });

  %brief-show

  .centered
    = link_to "Respond to this brief", new_brief_pitch_path(@brief), :class => "btn"
    |
    = link_to "Edit", edit_brief_path(@brief), :class => "btn"